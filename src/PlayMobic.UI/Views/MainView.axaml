<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:fluent="using:FluentAvalonia.UI.Controls"
             xmlns:views="using:PlayMobic.UI.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PlayMobic.UI.Views.MainView">

  <fluent:NavigationView
    Name="mainNavigationView"
    IsSettingsVisible="True"
    PaneDisplayMode="Auto" >

    <fluent:NavigationView.MenuItems>
      <fluent:NavigationViewItem Content="Convert" Tag="ConvertVideoView" IconSource="Sync" />
      <fluent:NavigationViewItem Content="Analyze" Tag="AnalyzeVideoView" IconSource="BrowsePhotos" />
    </fluent:NavigationView.MenuItems>

    <fluent:Frame Name="mainNavigationFrame" />
  </fluent:NavigationView>
</UserControl>
